<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<GridPane id="comments" alignment="CENTER" styleClass="commContent"
	stylesheets="@../assets/css/application.css" xmlns="http://javafx.com/javafx/8.0.141"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.modules.CommentsViewController">
	<children>
		<GridPane fx:id="commContentGridPane" hgap="25.0"
			onMouseClicked="#commContentGridPaneOnMouseClick" vgap="15.0">
			<columnConstraints>
				<ColumnConstraints halignment="CENTER" hgrow="NEVER" />
				<ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Circle fx:id="dpCricle" fill="WHITE" radius="75.0" stroke="BLACK"
					strokeType="INSIDE" styleClass="dp" />
				<Text fx:id="nameTxt" strokeType="OUTSIDE" strokeWidth="0.0"
					styleClass="h1" text="Name" GridPane.rowIndex="1" />
				<TextFlow maxHeight="-Infinity" GridPane.columnIndex="1"
					GridPane.valignment="CENTER">
					<children>
						<Text fx:id="commentTxt" strokeType="OUTSIDE" strokeWidth="0.0"
							styleClass="para" text="This user did not leave any comment."
							textOrigin="CENTER" />
					</children>
				</TextFlow>
				<FlowPane alignment="CENTER_RIGHT" columnHalignment="RIGHT"
					prefWrapLength="275.0" GridPane.columnIndex="1"
					GridPane.halignment="RIGHT" GridPane.rowIndex="1">
					<children>
						<Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="h4"
							text="Rating Given: ">
							<FlowPane.margin>
								<Insets />
							</FlowPane.margin>
						</Text>
						<Text fx:id="ratingTxt" strokeType="OUTSIDE" strokeWidth="0.0"
							styleClass="ratingStars" text="    " />
					</children>
				</FlowPane>
			</children>
			<cursor>
				<Cursor fx:constant="HAND" />
			</cursor>
		</GridPane>
	</children>
	<rowConstraints>
		<RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
	</columnConstraints>
</GridPane>
